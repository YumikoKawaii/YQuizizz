<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".daily.DailyChallenge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_7"
            android:text="DAILY CHALLENGES"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            android:layout_alignParentTop="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daily_create_challenge"
            android:text="CREATE A CHALLENGE"
            android:textColor="@color/blue_5"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_below="@id/textView3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dailyChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/createChallenge"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</FrameLayout>